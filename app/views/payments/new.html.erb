<div class="row">
  <div class="mt1">

    <h3>Оформление заказа</h3>

    <% if @payment.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @payment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <!-- Display items number in the cart and total price -->
    <p class="mb0">Вы выбрали
      <%= link_to cart_path do %>
          <span class="cart-count"><%= current_order.order_items.size %></span> товар(ов)
      <% end %>
    </p>
    <br>

    <div class="well">
      <%= form_for @payment do |f| %>
          <div class="form-group">
            <%= f.label 'Имя', class: 'control-label' %>
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label 'Фамилия', class: 'control-label' %>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.hidden_field :amount, :value => current_order.subtotal %>
            <p class="mb0"> Итоговая цена: <%= number_to_currency(current_order.subtotal, locale: :ru) %> </p>
            <br>
          </div>
          <div class="form-group">
            <%= f.submit 'Заказать', class: 'button' %>
          </div>
      <% end %>
    </div>

  </div>
</div>
