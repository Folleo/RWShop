<%#= link_to "#{current_order.order_items.size} Items in Cart ( #{number_to_currency current_order.subtotal} )", cart_path, class: "btn btn-link" %>

<% if current_order.order_items.size != 0 and current_order.order_status_id == 1 %>
    <%= link_to cart_path do %>
        <i class="fi-shopping-cart"></i>
        <%= current_order.order_items.size %>
        <% if current_order.order_items.size == 1 %>
            Product in Cart
        <% else %>
            Products in Cart
        <% end %>
        (<%= number_to_currency(current_order.subtotal, locale: :ru) %>)
    <% end %>
<% end %>