<%= form_for @order_item, html: {class: 'order_item_form'}, remote: true do |f| %>
    <h4 class="text-right">
      Unit Price: <%= number_to_currency(@product.price, locale: :ru) %>
    </h4>
    <div class="input-group">
      <%= f.number_field :quantity, class: 'form-control', min: 1 %>
      <div class="input-group-btn">
        <%= f.hidden_field :product_id, value: product.id %>
        <% if @product.id != @order_item.product_id %>
            <%= f.submit 'Add to Cart', class: 'button', id: 'cart_button' %>
        <% else %>
            <%= f.submit 'Update Cart', class: 'button', id: 'cart_button' %>
        <% end %>
        <%#= link_to 'Add to Cart', order_items_path, onclick: "$('#order_item_form').submit()", class: 'button', id: 'cart_button', remote: true, method: :post %>
        <%= link_to cart_path, class: 'button', id: 'cart_link', style: 'display: none' do %>
            <i class="fi-shopping-cart"></i>
            Go to Cart
        <% end %>
      </div>
    </div>
<% end %>