<tr id="category-row<%= @category.id %>">
  <td colspan="0" class="text-center">
    <%= form_for(@category, html: {class: 'edit_form'}, remote: true) do |f| %>
        <div class="row">
          <div class="small-2 column"><%= f.text_field :name, placeholder: 'category name' %></div>
          <div class="small-2 column"><%= f.text_field :description, placeholder: 'description' %></div>
          <div class="small-1 column"><%= f.number_field :discount_percent, min: 0, max: 100, placeholder: 'discount percent' %></div>
          <div class="small-1 column"><%= f.number_field :discount_amount, placeholder: 'discount amount' %></div>
          <div class="small-5 column"><%= f.text_field :image, placeholder: 'image' %></div>
          <div class="small-1 column end">
            <%= link_to '#', :onclick => "$('.edit_form').submit()", remote: true do %>
                <i class="fi-save"></i>
            <% end %>&nbsp;&nbsp;&nbsp;&nbsp;
            <%= link_to category_row_path, remote: true do %>
                <i class="fi-minus-circle"></i>
            <% end %>
          </div>
        </div>
    <% end %>
  </td>
</tr>
